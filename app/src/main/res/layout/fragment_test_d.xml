<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.TestFragmentD">

    <com.hjq.bar.TitleBar
        android:id="@+id/tb_test_d_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backButton="false"
        app:title="@string/home_nav_me" />

    <FrameLayout
      android:background="@color/colorAccent"
      android:layout_width="match_parent"
      android:layout_height="150dp">

        <de.hdodenhof.circleimageview.CircleImageView
          android:layout_marginTop="15dp"
          android:layout_gravity="center_horizontal"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/profile_image"
          android:layout_width="96dp"
          android:layout_height="96dp"
          android:src="@mipmap/ic_logo"
          app:civ_border_width="2dp"
          app:civ_border_color="#F7F6F6"/>

        <TextView
          android:id="@+id/tv_phone"
          android:layout_marginBottom="5dp"
          android:layout_gravity="center_horizontal|bottom"
          android:textColor="@color/white"
          android:textSize="20sp"
          tools:text="152****1295"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
      android:id="@+id/fl_name"
      android:focusable="true"
      android:clickable="true"
      android:background="@drawable/bg_hotel"
      android:layout_width="match_parent"
      android:layout_height="50dp">

        <TextView
          android:drawableRight="@mipmap/ic_right"
          android:drawableLeft="@mipmap/ic_name"
          android:layout_marginLeft="5dp"
          android:layout_gravity="center_vertical"
          android:text="  用户名"
          android:textSize="15sp"
          android:textColor="@color/black"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

        <TextView
          android:id="@+id/tv_name"
          android:textSize="15sp"
          android:text="152*****1295"
          android:layout_marginRight="20dp"
          android:layout_gravity="end|center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </FrameLayout>

    <View
      android:background="@color/gray"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"/>

    <FrameLayout
      android:id="@+id/fl_sex"
      android:focusable="true"
      android:clickable="true"
      android:background="@drawable/bg_hotel"
      android:layout_width="match_parent"
      android:layout_height="50dp">

        <TextView
          android:drawableRight="@mipmap/ic_right"
          android:drawableLeft="@mipmap/ic_sex"
          android:layout_marginLeft="5dp"
          android:layout_gravity="center_vertical"
          android:text="  性别"
          android:textSize="15sp"
          android:textColor="@color/black"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

        <TextView
          android:id="@+id/tv_sex"
          android:textSize="15sp"
          android:text="男"
          android:layout_marginRight="20dp"
          android:layout_gravity="end|center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

    </FrameLayout>

    <View
      android:background="@color/gray"
      android:layout_width="match_parent"
      android:layout_height="0.5dp"/>

    <FrameLayout
      android:id="@+id/fl_follow"
      android:focusable="true"
      android:clickable="true"
      android:background="@drawable/bg_hotel"
      android:layout_width="match_parent"
      android:layout_height="50dp">

        <TextView
          android:drawableRight="@mipmap/ic_right"
          android:drawableLeft="@mipmap/ic_follow"
          android:layout_marginLeft="5dp"
          android:layout_gravity="center_vertical"
          android:text="  我的收藏"
          android:textSize="15sp"
          android:textColor="@color/black"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
      android:id="@+id/tv_login_out"
      android:textSize="15sp"
      android:gravity="center"
      android:background="@drawable/bg_hotel"
      android:text="退出登录"
      android:textColor="@color/red"
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="50dp" />



</LinearLayout>